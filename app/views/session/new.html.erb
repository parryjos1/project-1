
<%= link_to "Sign up", new_user_path %>

<h2>Login</h2>

<% if flash[:error] %>
  <br>
  <strong><%= flash[:error] %></strong>
  <br>
<% end %>


<%= form_tag login_path do -%>

  <%= label_tag :email %>
  <%= email_field_tag :email %>
  <br>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <br>
  <%= submit_tag 'Login' %>

<% end %>
